<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.Sprint2.DrinkCustomizer">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="5">
        <Label text="Drink Type" />
        <ComboBox fx:id="typeDropdown" />
    </HBox>
    <HBox spacing="5">
        <Label text="Drink Size" />
        <ComboBox fx:id="sizeDropdown" />
    </HBox>

    <HBox spacing="25.0" alignment="CENTER">
        <Button fx:id="cancel" text="Cancel Item" />
        <Button fx:id="edit" text="Add to Order" onAction="#saveAndExit"/>
    </HBox>

</VBox>
